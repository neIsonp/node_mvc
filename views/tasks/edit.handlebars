<h1>edditing task : {{this.title}}</h1>

<form action="/tasks/edit" method="POST">
    <input type="hidden" name="id" value="{{task.id}}">

    <div class="form-control">
        <label for="title">Title:</label>
        <input type="text" name="title" placeholder="What you gonna do?" value="{{task.title}}">
    </div>

    <div class="form-control">
        <label for="description">description:</label>
        <textarea name="description" placeholder="Describe your task">{{task.description}}</textarea>
    </div>

    <input type="submit" value="Edit">

</form>